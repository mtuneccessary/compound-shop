  },
  "scripts": {
    "fork": "npx hardhat node",
    "start": "ts-node src/cli.ts",
    "cli": "ts-node src/cli.ts",
    "demo": "ts-node src/cli.ts comet-demo",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --ext .ts",
